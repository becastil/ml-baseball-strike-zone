# Database Configuration
POSTGRES_USER=fintech
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=fintech_db
DATABASE_URL=postgresql://fintech:your-secure-password@localhost:5432/fintech_db

# Redis Configuration
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@localhost:6379/0

# Backend Configuration
SECRET_KEY=your-secret-key-for-jwt-tokens
API_KEY=your-external-api-key
CORS_ORIGINS=http://localhost:3000,http://localhost:80
DEBUG=True
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development

# Market Data API Keys
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
POLYGON_API_KEY=your-polygon-io-key
IEX_CLOUD_API_KEY=your-iex-cloud-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key

# ML Engine Configuration
MODEL_PATH=/app/models
TRAINING_DATA_PATH=/app/data/training
BATCH_SIZE=32
EPOCHS=100
LEARNING_RATE=0.001

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=FinTech Terminal <noreply@fintech-terminal.com>

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
RATE_LIMIT_PER_MINUTE=60

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=True
GRAFANA_API_KEY=your-grafana-key

# Feature Flags
ENABLE_REAL_TIME_STREAMING=True
ENABLE_ML_PREDICTIONS=True
ENABLE_PAPER_TRADING=True
ENABLE_BACKTESTING=True

# External Services
STRIPE_API_KEY=your-stripe-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# Development
HOT_RELOAD=True
MOCK_EXTERNAL_APIS=False

# Production
SSL_CERT_PATH=/etc/ssl/certs/fintech.crt
SSL_KEY_PATH=/etc/ssl/private/fintech.key